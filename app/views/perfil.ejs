<% include header %>
    
    <div class="gn"><!--[ INICIO DA COLUNA LEFT ]-->

      <!-- #################################################################[ SIDEBAR-LEFT ] -->
          <% include sidebar-left %>
      <!-- #################################################################[ SIDEBAR-LEFT ] -->

    </div><!--[ FIM DA COLUNA LEFT ]-->
    <div class="gz"><!--[ INICIO DA COLUNA MAIN ]-->
            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h2><strong>Quem é você? </strong></h2>
                </div>
                <div class="panel-body">
                  <form action="/perfil" method="post">
                    <div class="form-group">
                      <label for="username">Nome</label>
                      <input type="text" name="username" class="form-control" placeholder="Meu nome é..." value="<%= user.local.username %>">
                        <span class="help-block">Como você gostaria de ser chamado?</span>
                    </div>
                    <div class="form-group">
                      <label for="about">Biografia</label>
                      <textarea name="about" id="about" cols="30" rows="3" placeholder="Eu sou..." class="form-control"></textarea>
                        <span class="help-block">Fale-nos um pouco sobre você.</span>
                    </div>
                    <div class="form-group">
                      <label for="useremail">Email</label>
                      <input type="email" name="useremail" id="email" class="form-control" placeholder="Meu e-mail é..." value="">
                        <span class="help-block">Em qual e-mail seus amigos podem lhe enviar novidades?</span>
                    </div>

                    <div class="row">
                      <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                          <label for="senha">Senha</label>
                            <input type="password" id="senha" name="senha" class="form-control" placeholder="Digite uma senha de 6 a 8 digitos">
                        </div>
                      </div>

                      <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                          <label for="nf-password">Repita a Senha</label>
                            <input type="password" id="nf-password" name="nf-password" class="form-control" placeholder="Repita a sua senha">
                            <span class="help-block">Evite problemas de acesso :-)</span>
                        </div>
                      </div>
                    </div>
                </div>
                <div class="panel-footer">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Salvar Alterações</button>
                          <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </form>
              </div>
            </div><!--/col-->
    </div><!--[ FIM DA COLUNA MAIN ]-->


    <div class="gn"><!--[ INICIO DA COLUNA RIGHT ]-->
      
